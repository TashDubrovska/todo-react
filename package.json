{
  "name": "todo-react",
  "version": "0.0.1",
  "description": "Todo app implemented in pure React.",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint --ext js --ext jsx --ignore-path .gitignore ."
  },
  "keywords": [
    "react"
  ],
  "engines": {
    "node": "10.13.0",
    "npm": "6.5.1"
  },
  "author": "Nataliya Dubrovska",
  "license": "ISC",
  "babel": {
    "presets": [
      "env",
      "react"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb",
    "plugins": [
      "jest"
    ],
    "env": {
      "jest/globals": true
    }
  },
  "jest": {
    "clearMocks": true,
    "coverageDirectory": "coverage",
