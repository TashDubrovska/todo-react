    "setupTestFrameworkScriptFile": "./configuration/enzyme.js",
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest",
      ".+\\.(css|styl|less|sass|scss)$": "jest-transform-css"
    }
  },
  "devDependencies": {
    "acorn": "^6.0.4",
    "babel": "^6.23.0",
